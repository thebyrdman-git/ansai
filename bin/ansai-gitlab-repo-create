#!/usr/bin/env bash
# Ansai GitLab Repo Create - Create GitLab CEE repository and push code
# 
# Usage:
#   ansai-gitlab-repo-create <repo_name> <description> [local_path] [namespace]
#
# Examples:
#   ansai-gitlab-repo-create ansai "ANSAI - AI-Powered Ansible Automation"
#   ansai-gitlab-repo-create ansai "ANSAI for Red Hat" /home/jbyrd/ansai jbyrd
#
# Requires:
#   - GITLAB_TOKEN environment variable (get from https://gitlab.cee.redhat.com/-/profile/personal_access_tokens)
#   - Git configured with SSH key for gitlab.cee.redhat.com
#
# Powered by Ansai - https://ansai.dev

set -euo pipefail

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

# Parse arguments
REPO_NAME="${1:-}"
REPO_DESCRIPTION="${2:-}"
LOCAL_PATH="${3:-$(pwd)}"
GITLAB_NAMESPACE="${4:-jbyrd}"

# Validate arguments
if [ -z "$REPO_NAME" ]; then
    echo -e "${RED}‚ùå Error: Repository name is required${NC}"
    echo ""
    echo "Usage: ansai-gitlab-repo-create <repo_name> <description> [local_path] [namespace]"
    echo ""
    echo "Example:"
    echo "  ansai-gitlab-repo-create ansai \"ANSAI - AI-Powered Ansible Automation\""
    exit 1
fi

if [ -z "$REPO_DESCRIPTION" ]; then
    echo -e "${RED}‚ùå Error: Repository description is required${NC}"
    echo ""
    echo "Usage: ansai-gitlab-repo-create <repo_name> <description> [local_path] [namespace]"
    exit 1
fi

# Check for GitLab token
if [ -z "${GITLAB_TOKEN:-}" ]; then
    echo -e "${RED}‚ùå Error: GITLAB_TOKEN environment variable not set${NC}"
    echo ""
    echo "Get your token from: https://gitlab.cee.redhat.com/-/profile/personal_access_tokens"
    echo ""
    echo "Scopes needed: api, write_repository"
    echo ""
    echo "Then set it:"
    echo "  export GITLAB_TOKEN='your_token_here'"
    exit 1
fi

# Check if local path exists
if [ ! -d "$LOCAL_PATH" ]; then
    echo -e "${RED}‚ùå Error: Local path does not exist: $LOCAL_PATH${NC}"
    exit 1
fi

# Check if local path is a git repository
if [ ! -d "$LOCAL_PATH/.git" ]; then
    echo -e "${RED}‚ùå Error: $LOCAL_PATH is not a git repository${NC}"
    echo ""
    echo "Initialize it first:"
    echo "  cd $LOCAL_PATH"
    echo "  git init"
    echo "  git add ."
    echo "  git commit -m 'Initial commit'"
    exit 1
fi

# Find the Ansai workflows directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
ANSAI_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"
WORKFLOW_PATH="$ANSAI_ROOT/workflows/gitlab-repo-create.yml"

# Check if workflow exists
if [ ! -f "$WORKFLOW_PATH" ]; then
    echo -e "${RED}‚ùå Error: Workflow not found: $WORKFLOW_PATH${NC}"
    exit 1
fi

# Display summary
echo -e "${BLUE}üöÄ ANSAI GitLab Repository Creation${NC}"
echo ""
echo -e "${YELLOW}Configuration:${NC}"
echo "  Repository: $GITLAB_NAMESPACE/$REPO_NAME"
echo "  Description: $REPO_DESCRIPTION"
echo "  Local path: $LOCAL_PATH"
echo "  GitLab URL: https://gitlab.cee.redhat.com/$GITLAB_NAMESPACE/$REPO_NAME"
echo ""

# Confirm
read -p "Continue? (y/n) " -n 1 -r
echo ""
if [[ ! $REPLY =~ ^[Yy]$ ]]; then
    echo "Cancelled."
    exit 0
fi

# Run the Ansible workflow
echo ""
echo -e "${GREEN}Running ANSAI workflow...${NC}"
echo ""

cd "$ANSAI_ROOT"

export GITLAB_TOKEN
ansible-playbook "$WORKFLOW_PATH" \
    -e "repo_name=$REPO_NAME" \
    -e "repo_description=$REPO_DESCRIPTION" \
    -e "local_path=$LOCAL_PATH" \
    -e "gitlab_namespace=$GITLAB_NAMESPACE" \
    -v

echo ""
echo -e "${GREEN}‚úÖ Done!${NC}"

